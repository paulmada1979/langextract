{
  "$id": "price_list",
  "version": "1.0.0",
  "description": "Generic price list.",
  "required": ["currency","items"],
  "fields": {
    "currency":{"type":"string","enum_ref":"currencies.iso"},
    "valid_from":{"type":"string"},
