      "name":{"type":"string"},
      "tier_prices":{"type":"list","items":{"type":"object","fields":{"min_qty":{"type":"number"},"price":{"type":"number"}}}},
      "MOQ":{"type":"number"},
      "lead_time":{"type":"string"}
    }}}
  }
}
